{
	"name": "backend",
	"type": "module",
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "tsup src/index.ts --format esm --out-dir dist --clean && tsc --noEmit",
		"start": "node dist/index.js",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:run": "vitest run",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"lint:ci": "biome ci .",
		"depcruise": "depcruise -c .dependency-cruiser.cjs src"
	},
	"dependencies": {
		"@account-book-app/db": "workspace:*",
		"@account-book-app/shared": "workspace:*",
		"@hono/node-server": "^1.19.5",
		"@hono/swagger-ui": "^0.5.3",
		"@hono/trpc-server": "^0.4.0",
		"@hono/zod-openapi": "^1.2.0",
		"@trpc/server": "^11.0.0",
		"dotenv": "^16.4.7",
		"effect": "^3.18.4",
		"hono": "^4.9.11",
		"inversify": "^7.10.8",
		"reflect-metadata": "^0.2.2",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.0",
		"@types/node": "^20.11.17",
		"@vitest/ui": "^2.1.9",
		"dependency-cruiser": "^17.3.7",
		"tsx": "^4.7.1",
		"typescript": "^5.8.3",
		"vitest": "^2.1.8"
	}
}

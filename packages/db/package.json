{
	"name": "@account-book-app/db",
	"version": "1.0.0",
	"description": "Database schema and ORM setup using Drizzle",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"scripts": {
		"dev": "tsup src/index.ts --format esm --dts --out-dir dist --watch",
		"build": "tsup src/index.ts --format esm --dts --out-dir dist --clean",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"db:push": "drizzle-kit push",
		"db:seed": "tsx src/seed/index.ts",
		"test": "echo \"No tests for db package\""
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.30.10",
		"pg": "^8.16.3"
	},
	"devDependencies": {
		"@types/node": "^24.7.2",
		"@types/pg": "^8.15.5",
		"drizzle-kit": "^0.21.4",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3"
	}
}
